<div class="layout">
  <div class="columns">
    <div class="column">
      <span class="label">Top Artists</span>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th><span class="label label--small">Artist</span></th>
            <th><span class="label label--small">Genre</span></th>
          </tr>
        </thead>
        <tbody>
          {% for artist in top_artists %}
            <tr>
              <td>{{ artist.rank }}</td>
              <td><span class="title title--small">{{ artist.name }}</span></td>
              <td><span class="label">{{ artist.genres }}</span></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    <div class="column">
      <span class="label">Top Tracks</span>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th><span class="label label--small">Track</span></th>
            <th><span class="label label--small">Artist</span></th>
          </tr>
        </thead>
        <tbody>
          {% for track in top_tracks %}
            <tr>
              <td>{{ track.rank }}</td>
              <td><span class="title title--small">{{ track.name }}</span></td>
              <td><span class="label">{{ track.artist }}</span></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    <div class="column">
      <span class="label">Recently Played</span>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th><span class="label label--small">Track</span></th>
            <th><span class="label label--small">Artist</span></th>
          </tr>
        </thead>
        <tbody>
            {% for track in recently_played %}
            <tr>
              <td>{{ track.rank }}</td>
              <td><span class="title title--small">{{ track.rank }}</span></td>
              <td><span class="label">{{ track.artist }} â€¢ {{ track.played_at }}</span></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="title_bar">
  <img class="image" src="https://usetrmnl.com/images/plugins/trmnl--render.svg">
  <span class="title">Spotify</span>
  <span class="instance">Synced: {{ time_range_label }}</span>
</div>