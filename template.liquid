<!DOCTYPE html>
<html>
<head>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Arial, sans-serif;
      padding: 20px;
      background: white;
      color: black;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
    }

    .header {
      text-align: center;
      margin-bottom: 25px;
      padding-bottom: 15px;
      border-bottom: 3px solid black;
    }

    h1 {
      font-size: 32px;
      font-weight: bold;
      margin-bottom: 5px;
    }

    .subtitle {
      font-size: 14px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .section {
      margin-bottom: 20px;
    }

    .section-title {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 10px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      border-bottom: 2px solid black;
      padding-bottom: 5px;
    }

    .list-item {
      display: flex;
      justify-content: space-between;
      padding: 8px 0;
      border-bottom: 1px solid #ccc;
    }

    .list-item:last-child {
      border-bottom: none;
    }

    .rank {
      font-weight: bold;
      margin-right: 10px;
      min-width: 25px;
    }

    .item-info {
      flex: 1;
    }

    .item-name {
      font-weight: bold;
      font-size: 14px;
    }

    .item-details {
      font-size: 12px;
      color: #333;
      margin-top: 2px;
    }

    .now-playing {
      background: black;
      color: white;
      padding: 15px;
      margin-bottom: 20px;
      border-radius: 5px;
      text-align: center;
    }

    .now-playing-label {
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 5px;
    }

    .now-playing-track {
      font-size: 18px;
      font-weight: bold;
    }

    .now-playing-artist {
      font-size: 14px;
      margin-top: 3px;
    }

    .footer {
      text-align: center;
      font-size: 11px;
      margin-top: 25px;
      padding-top: 15px;
      border-top: 2px solid black;
      color: #666;
    }

    .two-column {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }

    @media (max-width: 600px) {
      .two-column {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>ðŸŽµ Spotify Stats</h1>
      <div class="subtitle">{{ time_range_label }}</div>
    </div>

    {% if currently_playing %}
    <div class="now-playing">
      <div class="now-playing-label">Now Playing</div>
      <div class="now-playing-track">{{ currently_playing.name }}</div>
      <div class="now-playing-artist">{{ currently_playing.artist }}</div>
    </div>
    {% endif %}

    <div class="two-column">
      <div class="section">
        <div class="section-title">Top Artists</div>
        {% for artist in top_artists %}
        <div class="list-item">
          <span class="rank">{{ artist.rank }}</span>
          <div class="item-info">
            <div class="item-name">{{ artist.name }}</div>
            <div class="item-details">{{ artist.genres }}</div>
          </div>
        </div>
        {% endfor %}
      </div>

      <div class="section">
        <div class="section-title">Top Tracks</div>
        {% for track in top_tracks %}
        <div class="list-item">
          <span class="rank">{{ track.rank }}</span>
          <div class="item-info">
            <div class="item-name">{{ track.name }}</div>
            <div class="item-details">{{ track.artist }}</div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>

    <div class="section">
      <div class="section-title">Recently Played</div>
      {% for track in recently_played %}
      <div class="list-item">
        <span class="rank">{{ track.rank }}</span>
        <div class="item-info">
          <div class="item-name">{{ track.name }}</div>
          <div class="item-details">{{ track.artist }} â€¢ {{ track.played_at }}</div>
        </div>
      </div>
      {% endfor %}
    </div>

    <div class="footer">
      Updated: {{ updated_at | date: "%b %d, %Y %H:%M" }}
    </div>
  </div>
</body>
</html>
